<!DOCTYPE html>
<html lang="en">
<head>
        <meta charset="UTF-8">
        <title>Assessment - Home Page</title>
        <script src="../ajax/recom.js"></script>
</head>
<body>
      <h1>Welcome</h1>  
		
<div>
		<p><a href=""></a>TEXT</p>
		<p><a href=""></a>TEXT 2</p>
</div>

	<div>
		<table>
	        <thead>
	                <tr>
		                        <th scope="col">Name</th>
		                        <th scope="col">Region</th>
		                        <th scope="col">Type</th>
		                        <th scope="col">Country</th>
		                        <th scope="col">Longitude</th>
		                        <th scope="col">Latitude</th>
		                        <th scope="col">Description</th>
		                        <th scope="col">Recomendations</th>
	                </tr>
	        </thead>
			<%
				root.forEach(content =>{
			%>
			<tbody>
			        <tr>
							<td> <%= content.name %> </td>
							<td> <%= content.region %> </td>
							<td> <%= content.type %> </td>
							<td> <%= content.country %> </td>
							<td> <%= content.lon %> </td>
							<td> <%= content.lat %> </td>
							<td> <%= content.description%> </td>
							<td> <%= content.recommendations %> </td>
							<td> <button onclick="recommend(<%= content.ID %>)">Recommend</button></td>
			        </tr>
			</tbody>
			<% }); %>
			<script>
const port = 8080

async function ajaxRecom(query) { 
		const response = await fetch(`https://localhost:${port}/poi/${query}/recommend`).then() => {} 
		const contents = await response.json();
		console.log(contents);
}

function recommend(id) {
		console.log(id);
		ajaxRecom(id);
}
			</script>
		</table>
	</div>
</body>
</html>
